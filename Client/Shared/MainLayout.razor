@inherits LayoutComponentBase

<MudThemeProvider Theme="@EmployeeManagementTheme.Default"/>
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar Color="Color.Primary" Elevation="0">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@((e) => DrawerToggle())" />
        <MudText Typo="Typo.h6">Employee Management</MudText>
        <MudSpacer />
        <MudBadge Content="9" Color="Color.Error" Overlap="true" Class="mx-2">
            <MudIconButton Icon="@Icons.Material.Filled.Email" Color="Color.Default" Class="mx-n2 my-n4"/>
        </MudBadge>
        <MudIconButton Icon="@Icons.Material.Rounded.Settings" Color="Color.Inherit" Link="/"/>
        <MudIconButton Icon="@Icons.Material.Rounded.AccountCircle" Color="Color.Inherit" Link="/"/>
    </MudAppBar>
    <MudDrawer @bind-Open="_drawerOpen" Elevation="1">
        <MudDrawerHeader>
            <MudText Typo="Typo.h6">Menu</MudText>
        </MudDrawerHeader>
        <NavMenu />
    </MudDrawer>
    <MudMainContent>
        <MudContainer MaxWidth="MaxWidth.Large" Class="my-16 pt-16">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>

@code {
    bool _drawerOpen = true;

    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }
}